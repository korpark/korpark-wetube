extends base.pug

block content
  div 
    button#startBtn Start Recording
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file", accept="video/*", required, id="video", name="video")
    input(name="title", placeholder="Title", required, type="text")
    input(name="description", placeholder="Description", required, type="text")
    input(name="hashtags", placeholder="hashtags, separated by comma", type="text")
    input(value="Upload Video",type="submit") 

block scripts 
  scripts(src="/static/js/recorder.js")