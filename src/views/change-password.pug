extends base.pug

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(placeholder="Old Password", type="password", required, name="oldPassword")
    input(placeholder="New Password", type="password", required, name="NewPassword")
    input(placeholder="New Password Confirmation", type="password", required, name="NewPasswordConfirmation")
    input(value="Change Password", type="submit")