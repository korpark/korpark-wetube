extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="username", type="text", required, placeholder="put your username")
    input(name="password", type="password", required, placeholder="put your password")
    input(type="submit", value="Login")
    include partials/social-login
    include partials/kakao-login
    div.auth-switch
      span Don't have an account? 
      a(href="join") Create one now &rarr;